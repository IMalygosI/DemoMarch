<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" Width="1920" Height="1080"
		x:CompileBindings="False"
        x:Class="DemoMarch.MainWindow"
        Title="Авторизация">
	
	<Grid ShowGridLines="False"
		  ColumnDefinitions="*,*,*,*,*"
		  RowDefinitions="0.5*,*,*,*,*">
		
		<Grid Grid.Row="0"
			  Grid.Column="0"
			  ShowGridLines="False"
			  ColumnDefinitions="*,*,*,*,*"
			  RowDefinitions="*,*,*,*">

			<Border BorderBrush="Black"
					BorderThickness="0"
					Margin="10"
					CornerRadius="10"
					Grid.Row="0"
					Grid.Column="0"
					Grid.ColumnSpan="2"
					Grid.RowSpan="4">

				<Image Source="/Assets/logo.png"/>

			</Border>

			<TextBlock Text="Приэльбрусье"
					   Grid.Row="0"
					   Grid.Column="2"
					   Grid.ColumnSpan="3"
					   Grid.RowSpan="4"
					   Margin="10 0 0 0"
					   HorizontalAlignment="Left"
					   VerticalAlignment="Center"
					   TextWrapping="Wrap"
					   TextAlignment="Center"
					   FontWeight="Bold"/>
		</Grid>

		<Grid Grid.Column="1"
			  Grid.Row="1"
			  Grid.ColumnSpan="3"
			  Grid.RowSpan="3"			  
			  ShowGridLines="False"
			  ColumnDefinitions="*,2*,*"
			  RowDefinitions="*,*,*,*,*">

			<Border Grid.RowSpan="3"
					Grid.Row="1"
					Grid.Column="1"
					CornerRadius="20"
					BorderThickness="2"
					BorderBrush="Aqua"
					Background="#92d050">
			
			<Grid ShowGridLines="False"
				  ColumnDefinitions="*, *, *"
				  RowDefinitions="*, *, *">
				
				<StackPanel Grid.Column="1"
							Grid.Row="1"
							Grid.ColumnSpan="2"
							Grid.RowSpan="3">

					<TextBlock Text=""
							   Foreground="Red"
							   FontSize="20"
							   TextDecorations="StrikeThrough"
							   Name="CapchaText"
							   IsVisible="False"
							   Margin="50 0 0 0"
							   HorizontalAlignment="Left"
							   VerticalAlignment="Center"/>

					<TextBox Name="CapchaTextBox"
							 Text=""
							 Width="170"
							 IsVisible="False"
							 Watermark="Капча"
							 Margin="0 0 0 0"
							 CornerRadius="10"
							 HorizontalAlignment="Left"
							 VerticalAlignment="Center"/>
					
				<TextBlock Text="Логин:"
						   Margin="10 0 0 0"
						   HorizontalAlignment="Left"
						   VerticalAlignment="Center"/>

				<TextBox Name="login"
						 Text=""
						 Width="170"
						 Watermark="Логин"
						 Margin="0 0 0 0"
						 CornerRadius="10"
						 HorizontalAlignment="Left"
						 VerticalAlignment="Center"/>
				
				<TextBlock Text="Пароль:"
						   Margin="10 10 0 0"
						   HorizontalAlignment="Left"
						   VerticalAlignment="Center"/>

					<DockPanel>

						<TextBox Name="passworld"
								 Text=""
								 PasswordChar="*"
								 Width="170"
								 Watermark="Пароль"
								 Margin="0 0 0 0"
								 CornerRadius="10"
								 HorizontalAlignment="Center"
								 VerticalAlignment="Center"/>

						<Button HorizontalAlignment="Left"
								VerticalAlignment="Center"
								Margin="5 0 0 0"
								Click="Maska"
								Background="#259c41"
								CornerRadius="90">
							<TextBlock Text="*"
									   HorizontalAlignment="Center"
									   VerticalAlignment="Center"/>
						</Button>
				
					</DockPanel>

					<Button Width="170"
							IsVisible="True"
							Name="Entrance_Vhod"
							Click="Button_Click_Entrance"
							HorizontalAlignment="Left"
							VerticalAlignment="Center"
							Margin="0 10 0 0"
							Background="#259c41"
							CornerRadius="10">
					<TextBlock Text="Войти"
							   HorizontalAlignment="Center"
							   VerticalAlignment="Center"/>
				</Button>

				</StackPanel>

			</Grid>
			</Border>
		</Grid>	
	</Grid>		
</Window>
